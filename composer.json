{
    "name": "gulch/gulchuk-website",
    "description": "Personal website gulchuk.com",
    "license": "MIT",
    "authors": [
        {
            "name": "gulch",
            "email": "contact@gulch.in.ua",
            "role": "Developer"
        }
    ],
    "require": {
        "gulch/gminify": "dev-master",
        "gulch/assets": "dev-master",
        "vlucas/phpdotenv": "^2.2",
        "filp/whoops": "^2.0",
        "league/container": "^2.0",
        "league/plates": "^3.0",
        "league/route": "^3.0",
        "illuminate/database": "^5.4",
        "illuminate/support": "^5.4",
        "zendframework/zend-diactoros": "^1.3",
        "zendframework/zend-inputfilter": "^2.7",
        "zendframework/zend-servicemanager": "^3.3",
        "intervention/image": "^2.3",
        "samdark/sitemap": "^2.0",
        "suin/php-rss-writer": "^1.5",
        "bernard/bernard": "^0.12.3"
    },
    "require-dev": {
        "robmorgan/phinx": "^0.8",
        "fzaninotto/faker": "^1.6",
        "mayflower/php-codebrowser": "^1.1",
        "phpmd/phpmd": "^2.6",
        "pdepend/pdepend" : "^2.5",
        "squizlabs/php_codesniffer": "2.*"
    },
    "repositories":[
        {
            "type": "git",
            "url": "https://github.com/gulch/gminify"
        },
        {
            "type": "git",
            "url": "https://github.com/gulch/assets"
        }
    ],
    "autoload": {
        "psr-4": {
            "Gulchuk\\": "app/"
        },
        "files": [
            "app/Helpers/functions.php"
        ],
        "classmap": [
            "app/Helpers/"
        ],
        "exclude-from-classmap": [
            "/Tests/", 
            "/test/",
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Gulchuk\\Tests\\": "tests/"
        }
    }
}
