{
    "name": "gulch/gulchuk-website",
    "description": "Personal website gulchuk.com",
    "type": "project",
    "license": "MIT",
    "homepage": "https://gulchuk.com",
    "authors": [
        {
            "name": "Volodymyr Gulchuk",
            "email": "volodymyr@gulchuk.com",
            "homepage": "https://gulchuk.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "atlas/orm": "~3.1.0",
        "filp/whoops": "~2.3.0",
        "gulch/assets": "~1.1.1",
        "gulch/minify": "~1.0.0",
        "hollodotme/fast-cgi-client": "~2.4.1",
        "illuminate/database": "~5.7.0",
        "intervention/image": "~2.4.1",
        "league/container": "~3.2.0",
        "league/plates": "~3.3.0",
        "league/route": "~4.2.0",
        "monolog/monolog": "~1.24.0",
        "narrowspark/http-emitter": "~0.7.0",
        "nyholm/psr7": "~1.0.0",
        "nyholm/psr7-server": "~0.3.0",
        "samdark/sitemap": "~2.2.0",
        "suin/php-rss-writer": "~1.6.0",
        "symfony/finder": "~4.1.0",
        "vlucas/phpdotenv": "~2.5.0",
        "zendframework/zend-inputfilter": "~2.8.0"
    },
    "require-dev": {
        "atlas/cli": "^2.0",
        "fzaninotto/faker": "^1.7",
        "phpmd/phpmd": "^2.6",
        "phpmetrics/phpmetrics": "^2.4",
        "robmorgan/phinx": "^0.10",
        "sebastian/phpcpd": "^4.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helpers/functions.php"
        ],
        "exclude-from-classmap": [
            "/Tests/",
            "/test/",
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "md": "phpmd app text codesize,unusedcode,naming",
        "cs": "phpcs -n --standard=PSR2 app",
        "cpd": "phpcpd app",
        "metrics": "phpmetrics --report-html=storage/reports/phpmetrics ."
    }
}
