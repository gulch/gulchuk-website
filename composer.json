{
    "name": "gulch/gulchuk-website",
    "description": "Personal website gulchuk.com",
    "type": "project",
    "license": "MIT",
    "homepage": "https://gulchuk.com",
    "authors": [
        {
            "name": "Volodymyr Gulchuk",
            "email": "volodymyr@gulchuk.com",
            "homepage": "https://gulchuk.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "filp/whoops": "^2.15",
        "gulch/assets": "^1.1",
        "gulch/minify": "^1.0",
        "hollodotme/fast-cgi-client": "^3.1",
        "illuminate/database": "^10.5",
        "intervention/image": "^2.7",
        "league/container": "^4.2",
        "league/plates": "^3.5",
        "league/route": "^5.1",
        "monolog/monolog": "^3.3",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.0",
        "samdark/sitemap": "^2.4",
        "siriusphp/validation": "^3.1",
        "suin/php-rss-writer": "^1.6",
        "symfony/finder": "^6.2",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.0",
        "robmorgan/phinx": "^0.13.4",
        "phpmetrics/phpmetrics": "^2.4",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helpers/functions.php"
        ],
        "exclude-from-classmap": [
            "/Tests/",
            "/test/",
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "cs": "phpcs -n --standard=PSR2 app",
        "metrics": "phpmetrics --report-html=storage/reports/phpmetrics ."
    }
}